@model Course
@{
    ViewData["Title"] = "New";
    var departments = ViewData["depts"] as List<Department>;

}

<h1>New</h1>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-center">Add New Course</h2>
   
    <form action="/Courses/SaveNew" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow bg-light mx-auto" style="max-width: 600px;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label ASP-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter Course's name" />
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="mb-3">
            <label ASP-for="Degree" class="form-label text-black">Degree</label>
            <input asp-for="Degree" class="form-control text-black" placeholder="Enter Course's Degree" />
            <span class="text-danger" asp-validation-for="Degree"></span>
        </div> <div class="mb-3">
            <label ASP-for="MinDegree" class="form-label  text-black">MinDegree</label>
            <input asp-for="MinDegree" class="form-control text-black" placeholder="Enter Course's MinDegree" />
            <span class="text-danger" asp-validation-for="MinDegree"></span>
        </div> <div class="mb-3">
            <label ASP-for="Hours" class="form-label text-black">Hours</label>
            <input asp-for="Hours" class="form-control text-black" placeholder="Enter Course's Hours" />
            <span class="text-danger" asp-validation-for="Hours"></span>

            @* </div> <div class="mb-3"> *@
            @*     <label ASP-for="Name" class="form-label">Name</label> *@
            @*     <input asp-for="Name" class="form-control" placeholder="Enter instructor's name" /> *@
            @* </div> *@

            @* <div class="mb-3"> *@
            @*     <label for="Imag" class="form-label">Image URL</label> *@
            @*     <input type="text" name="Imag" id="Imag" class="form-control" placeholder="https://example.com/image.jpg" /> *@
            @* </div> *@

            @* <div class="mb-3"> *@
            @*     <label for="Salary" class="form-label">Salary</label> *@
            @*     <input type="number" step="0.01" name="Salary" id="Salary" class="form-control" placeholder="Enter salary" /> *@
            @* </div> *@

            @* <div class="mb-3"> *@
            @*     <label for="Address" class="form-label">Address</label> *@
            @*     <input type="text" name="Address" id="Address" class="form-control" placeholder="Enter address" /> *@
            @* </div> *@

            <div class="mb-3">
                <label for="DepartmentID" class="form-label text-black">Department</label>
                <select name="DepartmentID" id="DepartmentID" class="form-select text-black">
                    @foreach (var c in departments)
                    {
                        if (c.Id == @Model.DepartmentID)
                        {

                            <option value="@c.Id">@c.Name</option>


                        }

                    }

                    @if (departments != null)
                    {
                        foreach (var d in departments)
                        {
                            <option value="@d.Id">@d.Name</option>
                        }
                    }
                    else
                    {
                        <option disabled>لا توجد أقسام</option>
                    }
                </select>
            </div>



            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5">Add</button>
            </div>
    </form>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>