@model Instructor

<div class="card mb-3 p-4" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="/images/@Model.Img" class="img-fluid rounded" alt="Profile Image">
        </div>
        <div class="col-md-8">
            <div class="card-body py-0">
                <h5 class="card-title mb-2">@Model.Name's Profile</h5>
                <table class="table">
                    <tr>
                        <td>Id:</td>
                        <td>@Model.Id</td>
                    </tr>
                    <tr>
                        <td>Address:</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td>Salary:</td>
                        <td>@Model.Salary</td>
                    </tr>
                    <tr>
                        <td>Department:</td>
                        <td>@Model.Department.Name</td>
                    </tr>
                    <tr>
                        <td>Course:</td>
                        <td>@Model.Course.Name</td>
                    </tr>
                    <tr>
                        <td colspan="2"><a href="/Instructors" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">All Instructors</a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>