@model CourseDetailsViewModel
@{
    ViewData["Title"] = "Course Details";
}

<div class="container">
    <h2>Course Details</h2>

    <div class="row mb-4">
        <div class="col-md-4">
            <dl class="row">
                <dt class="col-5">ID</dt>
                <dd class="col-7">@Model.Id</dd>

                <dt class="col-5">Name</dt>
                <dd class="col-7">@Model.Name</dd>

                <dt class="col-5">Department</dt>
                <dd class="col-7">@Model.DepartmentName</dd>
            </dl>
        </div>
        <div class="col-md-4">
            <dl class="row">
                <dt class="col-5">Hours</dt>
                <dd class="col-7">@Model.Hours</dd>

                <dt class="col-5">Degree</dt>
                <dd class="col-7">@Model.Degree</dd>

                <dt class="col-5">Minimum Degree</dt>
                <dd class="col-7">@Model.MinDegree</dd>
            </dl>
        </div>
    </div>

    <h4>Trainees</h4>
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th>Image</th>
                <th>Trainee Name</th>
                <th>Trainee's Degree</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trainee in Model.Trainees)
            {
                <tr class="@(trainee.Passed ? "table-success" : "table-danger")">
                    <td class="text-center"><img class="rounded-circle" src="/images/@trainee.Image" style="width:40px" /></td>
                    <td>@trainee.TraineeName</td>
                    <td>@trainee.Degree</td>
                    <td>@(trainee.Passed ? "Passed" : "Failed")</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

<style>
    .border-3 {
        border-width: 3px !important;
    }

    .table-dark {
        height: 4rem;
        font-size: 1.125rem;
    }

    th, td {
        vertical-align: middle;
    }
</style>